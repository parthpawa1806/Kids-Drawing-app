<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<FrameLayout
    android:id="@+id/Frame_layout"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:background="@drawable/backgounddrawable"
    app:layout_constraintBottom_toTopOf="@+id/ll_color_pallet"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_margin="5dp"
    android:padding="1dp">

    <ImageView
        android:id="@+id/image_view"
        android:scaleType="centerCrop"
        tools:src="@drawable/indexddd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <parth.pawa.kidsdrawingapp.Drawingview
        android:id="@+id/drawing_view"
        android:background="#80FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</FrameLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/ll_color_pallet"
    app:layout_constraintTop_toBottomOf="@+id/Frame_layout"
    app:layout_constraintEnd_toEndOf = "parent"
    app:layout_constraintStart_toStartOf = "parent"
    app:layout_constraintBottom_toTopOf="@+id/action_buttons">

    <ImageButton
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/normal_pallet"
        android:layout_margin="5dp"
        android:tag="@color/yellow"
        android:background="@color/yellow"
        android:onClick="painClicked"
        />

    <ImageButton
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/normal_pallet"
        android:layout_margin="5dp"
        android:tag="@color/red"
        android:background="@color/red"
        android:onClick="painClicked"
        />

    <ImageButton
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/normal_pallet"
        android:layout_margin="5dp"
        android:tag="@color/blue"
        android:background="@color/blue"
        android:onClick="painClicked"
        />

    <ImageButton
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/normal_pallet"
        android:layout_margin="5dp"
        android:tag="@color/green"
        android:background="@color/green"
        android:onClick="painClicked"
        />

    <ImageButton
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/normal_pallet"
        android:layout_margin="5dp"
        android:tag="@color/skin"
        android:background="@color/skin"
        android:onClick="painClicked"
        />

    <ImageButton
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/normal_pallet"
        android:layout_margin="5dp"
        android:tag="@color/black"
        android:background="@color/black"
        android:onClick="painClicked"
        />


    <ImageButton
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/normal_pallet"
        android:layout_margin="5dp"
        android:tag="@color/lollipop"
        android:background="@color/lollipop"
        android:onClick="painClicked"
        />

    <ImageButton
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/normal_pallet"
        android:layout_margin="5dp"
        android:tag="@color/random"
        android:background="@color/random"
        android:onClick="painClicked"
        />
    <ImageButton
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/normal_pallet"
        android:layout_margin="5dp"
        android:tag="@color/white"
        android:background="@color/white"
        android:onClick="painClicked"
        />

</LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/action_buttons"
        app:layout_constraintEnd_toEndOf = "parent"
        app:layout_constraintStart_toStartOf = "parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_color_pallet"
        app:layout_constraintBottom_toBottomOf="parent">


    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/ib_brush"
        android:src="@drawable/brushphoto"
        android:layout_margin="5dp"
        android:scaleType="fitXY"

/>
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/ib_undo"
            android:src="@drawable/undoo"
            android:layout_margin="5dp"
            android:scaleType="fitXY"
            />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/gallery_button"
            android:scaleType="fitXY"
            android:src="@drawable/indexgal"
            android:layout_margin="5dp"/>
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/ib_save"
            android:scaleType="fitXY"
            android:src="@drawable/indexsave"
            android:layout_margin="5dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>